{{!
    @template mod_privatestudentfolder/overrides

    Private Student Folder's overrides template.

    The purpose of this template is to the contents of the overrides.
    
    Example context (json):
    {
        "newoverrideurl": "https://example.com/mod/privatestudentfolder/overrides_edit.php?add=1",
        "addoverridetitle": "Add new override",
        "usergroupcoltitle": "User / Group",
        "overridesempty": false,
        "overrides": [
            {
                "userurl": "https://example.com/user/view.php?id=2",
                "fullname": "Alice Dupont",
                "submissionoverride": "Submission deadline extended by 3 days",
                "approvaloverride": "Requires approval from supervisor",
                "editurl": "https://example.com/mod/privatestudentfolder/overrides_edit.php?id=12",
                "deleteurl": "https://example.com/mod/privatestudentfolder/overrides_delete.php?id=12"
            },
            {
                "userurl": "https://example.com/group/view.php?id=5",
                "fullname": "Group A",
                "submissionoverride": "Extended deadline",
                "approvaloverride": "Auto-approved",
                "editurl": "https://example.com/mod/privatestudentfolder/overrides_edit.php?id=13",
                "deleteurl": "https://example.com/mod/privatestudentfolder/overrides_delete.php?id=13"
            }
        ]
    }
}}
<div class="">
    <a href="{{newoverrideurl}}" class="btn btn-primary">{{addoverridetitle}}</a>
    <table class="table w-100 mt-2">
        <thead>
            <tr>
                <th>{{usergroupcoltitle}}</th>
                <th>{{#str}}overrides,assign{{/str}}</th>
                <th>{{#str}}action{{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#overridesempty}}
                <tr>
                    <td colspan="99">{{#str}}overrides:empty,privatestudentfolder{{/str}}</td>
                </tr>
            {{/overridesempty}}
            {{^overridesempty}}
                {{#overrides}}
                    <tr>
                        <td>{{#userurl}}<a href="{{.}}" title="{{fullname}}">{{/userurl}}{{fullname}}{{#userurl}}</a>{{/userurl}}</td>
                        <td><div class="">{{submissionoverride}}</div><div class="">{{approvaloverride}}</div></td>
                        <td><a href="{{editurl}}">{{#pix}}t/edit{{/pix}}</a><a href="{{deleteurl}}">{{#pix}}t/delete{{/pix}}</a></td>
                {{/overrides}}
            {{/overridesempty}}
        </tbody>
    </table>
</div>