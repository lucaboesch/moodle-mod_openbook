{{!
    @template mod_privatestudentfolder/overview

    Private Student Folder's overrides template.

    The purpose of this template is to the contents of the overrides.
    
    Example context (json):
    {
        "newoverrideurl": "https://example.com/mod/privatestudentfolder/overrides_edit.php?add=1",
        "addoverridetitle": "Add new override",
        "usergroupcoltitle": "User / Group",
        "overridesempty": false,
        "overrides": [
            {
                "userurl": "https://example.com/user/view.php?id=2",
                "fullname": "Alice Dupont",
                "submissionoverride": "Submission deadline extended by 3 days",
                "approvaloverride": "Requires approval from supervisor",
                "editurl": "https://example.com/mod/privatestudentfolder/overrides_edit.php?id=12",
                "deleteurl": "https://example.com/mod/privatestudentfolder/overrides_delete.php?id=12"
            },
            {
                "userurl": "https://example.com/group/view.php?id=5",
                "fullname": "Group A",
                "submissionoverride": "Extended deadline",
                "approvaloverride": "Auto-approved",
                "editurl": "https://example.com/mod/privatestudentfolder/overrides_edit.php?id=13",
                "deleteurl": "https://example.com/mod/privatestudentfolder/overrides_delete.php?id=13"
            }
        ]
    }
}}
{{#isteacher}}
    {{#showapprovalrequired}}
        <a href="{{viewall_approvalneeded_url}}" class="btn btn-primary">{{#str}}giveapproval,privatestudentfolder{{/str}}</a>
    {{/showapprovalrequired}}
{{/isteacher}}
{{^isteacher}}
    {{{myfilesform}}}
{{/isteacher}}
<div class="my-3">
    {{#isteacher}}
        <h3>{{#str}}overview,privatestudentfolder{{/str}}</h3>

    {{/isteacher}}
    <table class="table table-striped w-100">
        {{#isteacher}}
            <tr>
                <th>{{#str}}mode,privatestudentfolder{{/str}}</th>
                <td>{{mode}}</td>
            </tr>
            {{#assign}}
                {{{.}}}
            {{/assign}}
            <tr>
                <th>{{#str}}filesarepersonal,privatestudentfolder{{/str}}</th>
                <td>{{filesarepersonal}}</td>
            </tr>
            <tr>
                <th>{{#str}}obtainteacherapproval,privatestudentfolder{{/str}}</th>
                <td>{{obtainteacherapproval}}</td>
            </tr>
            <tr>
                <th>{{obtainstudentapprovaltitle}}</th>
                <td>{{obtainstudentapproval}}</td>
            </tr>
            <tr>
                <th>{{#str}}participants{{/str}}</th>
                <td>{{studentcount}}</td>
            </tr>
            <tr>
                <th>{{#str}}submitted,assign{{/str}}</th>
                <td>{{^allfiles_empty}}<a href="{{allfiles_url}}">{{allfilescount}}</a>{{/allfiles_empty}}{{#allfiles_empty}}0{{/allfiles_empty}}</td>
            </tr>
            {{#showapprovalrequired}}
                <tr>
                    <th>{{#str}}approval_required,privatestudentfolder{{/str}}</th>
                    <td><a href="{{viewall_approvalneeded_url}}">{{approvalrequiredcount}}</a></td>
                </tr>
            {{/showapprovalrequired}}
        {{/isteacher}}
    </table>
</div>
{{#isteacher}}
    {{{myfilesform}}}
{{/isteacher}}